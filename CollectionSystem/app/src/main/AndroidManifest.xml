<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.alfredis.collectionsystem" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HoleIndexActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HoleInfoActivity"
            android:label="@string/title_activity_hole_info" >
        </activity>
        <activity
            android:name=".RigIndexActivity"
            android:label="@string/title_activity_rig" >
        </activity>
        <activity
            android:name=".RigInfoActivity"
            android:label="@string/title_activity_rig_info" >
        </activity>
    </application>

</manifest>
